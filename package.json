{
  "name": "contracts",
  "version": "1.0.0",
  "description": "Elastic DAO Contracts",
  "main": "index.js",
  "repository": "git@github.com:elasticdao/contracts.git",
  "author": "alleycatdev <alleycatdev@protonmail.com>",
  "license": "GPLv3",
  "scripts": {
    "compile": "npx buidler compile",
    "console": "npx buidler console",
    "coverage": "yarn run compile && npx buidler coverage",
    "deploy": "npx buidler deploy",
    "ethereum": "npx buidler node",
    "lint": "yarn run prettier && yarn run lint:es6 && yarn run lint:solidity",
    "lint:es6": "npx eslint ./*.js deploy/*.js deploy/**/*.js test/**/*.js test/*.js",
    "lint:solidity": "npx solhint src/*.sol src/**/*.sol",
    "prerelease": "yarn lint",
    "prettier": "yarn run prettier:es6 && yarn run prettier:solidity",
    "prettier:es6": "prettier --write ./*.js --write deploy/*.js --write deploy/**/*.js --write test/**/*.js test/*.js",
    "prettier:solidity": "prettier --write src/*.sol --write src/**/*.sol",
    "test": "npx buidler test"
  },
  "dependencies": {
    "@nomiclabs/buidler": "^1.4.7",
    "@nomiclabs/buidler-ethers": "^2.0.0",
    "@nomiclabs/buidler-etherscan": "^1.3.3",
    "@nomiclabs/buidler-waffle": "^2.0.0",
    "buidler-deploy": "^0.5.17",
    "buidler-gas-reporter": "^0.1.3",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.0.2",
    "ethers": "^5.0.8",
    "scrypt": "^6.0.3",
    "solc": "0.7.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^7.9.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-mocha": "^8.0.0",
    "mocha": "^8.1.1",
    "prettier": "^2.1.1",
    "prettier-plugin-solidity": "^1.0.0-alpha.57",
    "solhint": "^3.2.0",
    "solidity-coverage": "^0.7.10"
  }
}
