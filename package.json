{
  "name": "contracts",
  "version": "1.0.0",
  "description": "Elastic DAO Contracts",
  "main": "index.js",
  "repository": "git@github.com:elasticdao/contracts.git",
  "author": "alleycatdev <alleycatdev@protonmail.com>",
  "license": "GPLv3",
  "type": "module",
  "scripts": {
    "compile": "npx hardhat compile",
    "console": "npx hardhat console",
    "coverage": "npx hardhat coverage --network coverage --solcoverjs ./.solcover.js",
    "deploy": "npx hardhat deploy",
    "ethereum": "yarn lint && npx hardhat node",
    "lint": "yarn run prettier && yarn run lint:es6 && yarn run lint:solidity && yarn run lint:tests",
    "lint:es6": "npx eslint ./*.js deploy/*.js deploy/**/*.js",
    "lint:solidity": "npx solhint src/**/*.sol",
    "lint:tests": "npx eslint test/**/*.js test/*.js",
    "prerelease": "yarn lint",
    "prettier": "yarn run prettier:es6 && yarn run prettier:solidity && yarn run prettier:tests",
    "prettier:es6": "prettier --write ./*.js --write deploy/*.js --write deploy/**/*.js",
    "prettier:solidity": "prettier --write src/**/*.sol --write src/**/**/*.sol --write src/**/**/**/*.sol",
    "prettier:tests": "yarn compile && prettier --write test/**/*.js test/*.js",
    "test": "yarn run prettier:tests && yarn run lint:tests && npx hardhat test --deploy-fixture"
  },
  "dependencies": {
    "@elastic-dao/sdk": "link:/mnt/d/Projects/ElasticDAO/sdk",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "bignumber.js": "^9.0.1",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.0.2",
    "ethers": "^5.0.8",
    "hardhat": "^2.0.0",
    "hardhat-contract-sizer": "^2.0.2",
    "hardhat-deploy": "^0.7.0-beta.28",
    "hardhat-gas-reporter": "^1.0.1",
    "scrypt": "^6.0.3",
    "solc": "0.7.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^7.9.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-mocha": "^8.0.0",
    "mocha": "^8.1.1",
    "prettier": "^2.1.1",
    "prettier-plugin-solidity": "^1.0.0-alpha.57",
    "rollup-plugin-inject": "^3.0.2",
    "solhint": "^3.2.0",
    "solidity-coverage": "^0.7.10"
  }
}
